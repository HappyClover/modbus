<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:gravity="center"/>

        <TextView android:id="@+id/connect_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:gravity="center"

            android:layout_below="@id/status"/>

        <Button android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연결하기"

            android:layout_below="@id/connect_device"/>

        <Button android:id="@+id/btn_getVoltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getVoltage"

            android:layout_below="@id/btn_connect"
            />

        <Button android:id="@+id/btn_getDeviceTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getDeviceTemp"

            android:layout_below="@id/btn_getVoltage"
            />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>